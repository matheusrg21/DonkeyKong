+# Read a 'fresh' value from the joystick                    #
+joystick:             addi sp sp -4
+		      sw ra 0(sp)
+		      lw t0, 0(s3)                          # Le bit de Controle joystick
+                      srli t0, t0, 4
+                      slli t0, t0, 4
+                      lw t1, 0(s5)
+                      srli t1, t1, 4
+                      slli t1, t1, 4
+                      add a6 zero t0
+                      add a7 zero t1
+                      jal evaluate_y
+                      jal evaluate_x
+                      li a0, 0
+                      lw ra 0(sp)
+                      addi sp sp 4
+      		      addi a1 zero 0
+                      ret
+
